pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                sh "docker build -t mfathy1/nti:${env.BUILD_NUMBER} ."
            }

        }
        stage('login') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh "docker push mfathy1/nti:${env.BUILD_NUMBER}"
                }
            }

        }
    }
}
